<% provide(:page_title, @project.title) %>

<p id="notice"><%= notice %></p>


<nav class="navbar navbar-expand-md navbar-light bg-light">
    <%= link_to 'Home', projects_path %>
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav">

        <% if !user_signed_in? %>
            <%= button_to "Sign In", new_user_session_path, method: :new  %>
        <% end %>
            
        </div>
        <% if user_signed_in? %>
        <div class="navbar-nav ml-auto">
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete  %>
            
        <%= link_to 'New Project', new_project_path, class: 'btn btn-success' %>
        </div>
        <% end %>
    </div>
</nav>
<main role="main">

      <div class="jumbotron">
        <div class="container">
          <h2>
            <%= @project.title %>
          </h2>
          <p><strong>Description:</strong>
          <%= @project.description %></p>
          <p><center>
          <% if user_signed_in? %>
              <td><%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-info btn-xs' %></td>
              <td><%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
            <% end %>
          </center></p>
        </div>
      </div>
      </div> <!-- /container -->

    </main>